<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F3DA"
    android:fitsSystemWindows="true">

    <!-- 顶部标题栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.MaterialComponents.Toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="#C2ECBF"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:title="Join Class"
        app:titleTextColor="#08210F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 内容卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#F7FFF0"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:strokeColor="#DDECDC"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 标题 -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find and join your class"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#162B1C"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use an invite token or search by name"
                android:textColor="#66796B"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>

            <!-- BY TOKEN / BY NAME：保持原来的 group id -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleAccessType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <!-- 注意：不用 outlinedStyle，改用普通 Button 才能让 backgroundTint 根据 state_checked 生效 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnByToken"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BY TOKEN"
                    android:textAllCaps="true"
                    android:textColor="@color/toggle_text"
                    app:backgroundTint="@color/toggle_bg"
                    app:strokeColor="#3C6E47"
                    app:strokeWidth="1dp"
                    app:checkedIcon="@null" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnByName"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BY NAME"
                    android:textAllCaps="true"
                    android:textColor="@color/toggle_text"
                    app:backgroundTint="@color/toggle_bg"
                    app:strokeColor="#3C6E47"
                    app:strokeWidth="1dp"
                    app:checkedIcon="@null" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- 输入框（保留旧 id） -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:boxStrokeColor="#C8E6C9"
                app:hintEnabled="true"
                app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etQuery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter token"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 主操作按钮（保留旧 id） -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAction"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Join"
                android:textAllCaps="false"
                android:textColor="@color/brand_on_primary"
                app:backgroundTint="@color/brand_primary"
                app:cornerRadius="20dp"
                app:iconPadding="8dp"/>

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#E3F1E0"/>

            <!-- Token 模式：单个结果卡片 -->
            <LinearLayout
                android:id="@+id/sectionToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Found class"
                    android:textStyle="bold"
                    android:textColor="#162B1C"
                    android:textSize="15sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTokenResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#E5F3E2"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/tvClassNameToken"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Class name"
                            android:textStyle="bold"
                            android:textColor="#162B1C"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvTeacherToken"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Teacher • —"
                            android:textColor="#4A5C4E"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/tvDescToken"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description..."
                            android:textColor="#4A5C4E"
                            android:textSize="14sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="6dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnJoinToken"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Join this class"
                            android:textAllCaps="false"
                            android:textColor="@color/brand_on_primary"
                            app:backgroundTint="@color/brand_primary"
                            app:cornerRadius="18dp"
                            app:iconPadding="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Name 模式：结果列表 -->
            <LinearLayout
                android:id="@+id/sectionList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Results"
                    android:textStyle="bold"
                    android:textColor="#162B1C"
                    android:textSize="15sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerResults"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:clipToPadding="false"
                    android:paddingTop="10dp"/>
            </LinearLayout>

            <!-- 空态 -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="24dp"
                android:paddingBottom="4dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:alpha="0.9"
                    android:src="@android:drawable/ic_menu_search"/>

                <TextView
                    android:id="@+id/emptyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No results. Try a different name."
                    android:textColor="#607D64"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- 加载中 -->
            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginTop="-48dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
