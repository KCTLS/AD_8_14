<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="14dp"
    app:cardElevation="2dp"
    app:strokeColor="#E5F3E2"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/star_black"
                android:contentDescription="@null"/>

            <TextView
                android:id="@+id/tvClassName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Class name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#162B1C"/>

            <!-- 深绿底 + 白字 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJoin"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="88dp"
                android:text="Join"
                android:textAllCaps="false"
                android:textColor="@color/brand_on_primary"
                app:backgroundTint="@color/brand_primary"
                app:cornerRadius="16dp"
                app:iconPadding="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher • —"
            android:textColor="#4A5C4E"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description..."
            android:textColor="#4A5C4E"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
